<% layout("./boilerplate/boilerplate.ejs") %>

    <div class="" style="margin-top: 7rem;">
        <div class="row">
            <div class="col-8 offset-2">
                <h2>Upload New Case</h2>
                <form action="/case" method="post" class="needs-validation" enctype="multipart/form-data"
                    onsubmit="showLoading()">
                    <div class="mb-3">
                        <label for="title" class="form-lable">Case Title</label>
                        <input type="text" name="post[title]" placeholder="Enter title" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-lable">Description</label>
                        <textarea type="text" name="post[description]" placeholder="Describe your case"
                            class="form-control" required></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-lable">Case Image</label>
                        <input type="file" name="post_image" accept="image/*" placeholder="Upload image"
                            class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="video" class="form-lable">Case Video</label>
                        <input type="file" name="post_video" accept="video/*" placeholder="Upload Video"
                            class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="location" class="form-lable">Location</label>
                        <input type="text" name="post[location]" placeholder="Enter location where this case happen"
                            class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <div>
                            <label class="lable" for="state">Select State:</label>
                            <select class="select" name="post[state]" required id="state" onchange="updateCities()">
                                <option value="">--Select State--</option>
                                <option value="andamanandnicobarislands">Andaman and Nicobar Islands</option>
                                <option value="andhrapradesh">Andhra Pradesh</option>
                                <option value="arunachalpradesh">Arunachal Pradesh</option>
                                <option value="assam">Assam</option>
                                <option value="bihar">Bihar</option>
                                <option value="chandigarh">Chandigarh</option>
                                <option value="chhattisgarh">Chhattisgarh</option>
                                <option value="dadraandnagarhavelianddamananddiu">Dadra and Nagar Haveli and Daman and Diu</option>
                                <option value="delhi">Delhi</option>
                                <option value="goa">Goa</option>
                                <option value="gujarat">Gujarat</option>
                                <option value="haryana">Haryana</option>
                                <option value="himachalpradesh">Himachal Pradesh</option>
                                <option value="jammuandkashmir">Jammu and Kashmir</option>
                                <option value="jharkhand">Jharkhand</option>
                                <option value="karnataka">Karnataka</option>
                                <option value="kerala">Kerala</option>
                                <option value="ladakh">Ladakh</option>
                                <option value="lakshadweep">Lakshadweep</option>
                                <option value="madhyapradesh">Madhya Pradesh</option>
                                <option value="maharashtra">Maharashtra</option>
                                <option value="manipur">Manipur</option>
                                <option value="meghalaya">Meghalaya</option>
                                <option value="mizoram">Mizoram</option>
                                <option value="nagaland">Nagaland</option>
                                <option value="odisha">Odisha</option>
                                <option value="puducherry">Puducherry</option>
                                <option value="punjab">Punjab</option>
                                <option value="rajasthan">Rajasthan</option>
                                <option value="sikkim">Sikkim</option>
                                <option value="tamilnadu">Tamil Nadu</option>
                                <option value="telangana">Telangana</option>
                                <option value="tripura">Tripura</option>
                                <option value="uttarpradesh">Uttar Pradesh</option>
                                <option value="uttarakhand">Uttarakhand</option>
                                <option value="westbengal">West Bengal</option>
                            </select>
                        </div>
                        <div>
                            <label class="lable" for="city">Select City:</label>
                            <select class="select" name="post[city]" required id="city">
                                <option value="">--Select City--</option>
                                <!-- Cities will be shown based on state selection -->
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="mobile" class="form-lable">Mobile number</label>
                        <input type="number" name="post[mobile]"
                            placeholder="Enter your mobile number, give the active number" class="form-control"
                            required>
                    </div>
                    <br>

                    <!-- Confirmation for upload -->
                    <div class="modal fade" id="confirmModal" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Case upload confirmation</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    Check all the givin information, photo and video are correct. After submitting this
                                    fields cannot be updated.
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                                    <form action="/case" method="post">
                                        <button type="submit" class="btn btn-primary"
                                            data-bs-dismiss="modal">Yes</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-dark mb-3" data-bs-toggle="modal" data-bs-target="#confirmModal">Upload Case Now</button>
                </form>
                <div id="loading-screen"
                    style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.7); color: white; text-align: center; font-size: 24px; padding-top: 20%; z-index: 1000;">
                    <div
                        style="display: inline-block; border: 5px solid white; border-top: 5px solid transparent; width: 50px; height: 50px; border-radius: 50%; animation: spin 1s linear infinite;">
                    </div>
                    <br>Uploading... Please wait. <br>
                    higher the video size, longer will it take to upload.
                </div>
            </div>
        </div>
    </div>